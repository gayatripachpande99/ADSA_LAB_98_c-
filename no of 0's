#include <iostream>
using namespace std;
int countZeros(int arr[], int n) {
    int low = 0, high = n - 1;
    int firstZeroIndex = -1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (arr[mid] == 0) {
            firstZeroIndex = mid;
            high = mid - 1; 
        } else {
            low = mid + 1;
        }
    }

    if (firstZeroIndex == -1)
        return 0; 
    else
        return n - firstZeroIndex;
}

int main() {
    int arr[] = {1, 1, 1, 0, 0, 0, 0};
    int n = sizeof(arr) / sizeof(arr[0]);

    int zeroCount = countZeros(arr, n);
    cout << "Number of 0s: " << zeroCount << endl;

    return 0;
}
